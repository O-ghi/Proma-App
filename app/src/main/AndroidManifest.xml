        android:supportsRtl="true"
        android:theme="@style/Theme.PromaApp"
        tools:targetApi="31">
        <activity
            android:name="com.proma.promaapp.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.proma.promaapp.MainActivity"/>
        <activity
            android:name="com.proma.promaapp.UserActivity"
            android:label="User Activity">
        </activity>
        <activity
            android:name="com.proma.promaapp.RegisterActivity"
            android:label="Register Page">
        </activity>
        <activity
            android:name="com.proma.promaapp.ScanBarcodeActivity"
            android:label="Register Page">
        </activity>
        <activity
            android:name="com.proma.promaapp.ProductDetailActivity"
            android:label="Register Page">
        </activity>
        <activity
            android:name="com.proma.promaapp.AddProductActivity"
            android:label="Register Page">
        </activity>
        <activity android:name="com.proma.promaapp.AddStoreActivity" />
        <activity android:name="com.proma.promaapp.StorePageActivity" />
        <activity android:name="com.proma.promaapp.ProductPageActivity" />
        <activity android:name="com.proma.promaapp.OrderProductActivity" />
        <activity android:name="com.proma.promaapp.CartListActivity" />
        <activity android:name="com.proma.promaapp.OrderHistoryActivity" />
        <activity android:name="com.proma.promaapp.EditProductActivity" />
        <activity android:name="com.proma.promaapp.OrderDetailActivity" />
        <activity android:name="com.proma.promaapp.ScanBarcodeOrderActivity" />

    </application>

</manifest>